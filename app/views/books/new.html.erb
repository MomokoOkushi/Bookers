<h1>Books</h1>

<p>Title</p>
<p>Body</p>

<% @books.each do |book| %>

  <%= book.title %>

  <%= book.body %>
  <%= link_to "show", book_path(book.id) %>
  <a href="/edit">edit</a>


<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

