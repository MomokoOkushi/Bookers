<h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <p>error. Try again.</p>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%=f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body%>

  <%= f.submit 'Update Book'%>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
<a href="/books">Back</a>

